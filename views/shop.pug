extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/main.css")

block content
        main 
            if prods.length > 0
                .grid 
                each product in prods 
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title} 
                        div.card__image
                            img(src="https://images.unsplash.com/photo-1589998059171-988d887df646?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=876&q=80", alt="image", style="width:50x;height:50px;")
                        div.card__content 
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more 
                        div.card_actions 
                            button.btn Add to Card 
            else 
                h1 No Products 



