<main>

        {{#if hasProducts}}
    <div class="grid">
        {{#each prods}}
            <article class ="card product-item">
                <header class="card__header">
                    <h1 class="product__title">{{this.title}}</h1>
                    <div class="card__image">
                        <img src="https://images.unsplash.com/photo-1589998059171-988d887df646?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=876&q=80" alt="Image" style="width:50x;height:50px;">
                        <div class="card__content">
                            <h2 class="product__price">$19.99</h2>
                            <p class="product__description">This Is Description</p>
                        </div>
                        <div class="card_actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </div>
                </header>
            </article>
            {{/each}}
        {{ else}}
            <h1>No Product Found</h1>
        {{/if}}
</div>
</main>








